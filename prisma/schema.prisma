generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Admin {
  usuario_id String  @id
  Usuario    Usuario @relation(fields: [usuario_id], references: [id])
}

model Especialidad {
  id     String   @id
  nombre String   @unique
  Medico Medico[]
}

model FichaMedica {
  id                     String    @id
  alergias               String
  diagnostico            String
  tratamientos           String
  medicamentos_recetados String
  Paciente               Paciente?
}

model Medico {
  usuario_id       String            @id
  tipo_matricula   TipoMatriculaEnum
  numero_matricula String            @unique
  numero_telefono  String
  ubicacion_id     String            @unique
  especialidad_id  String
  descripcion      String?
  Especialidad     Especialidad      @relation(fields: [especialidad_id], references: [id])
  Ubicacion        Ubicacion         @relation(fields: [ubicacion_id], references: [id])
  Usuario          Usuario           @relation(fields: [usuario_id], references: [id])
}

model ObraSocial {
  id       String     @id
  nombre   String     @unique
  Paciente Paciente[]
}

model Paciente {
  usuario_id          String      @id
  fecha_nacimiento    DateTime
  lugar_nacimiento    String
  contacto_emergencia String
  numero_telefono     String
  ubicacion_id        String      @unique
  obra_social_id      String
  ficha_medica_id     String      @unique
  FichaMedica         FichaMedica @relation(fields: [ficha_medica_id], references: [id])
  ObraSocial          ObraSocial  @relation(fields: [obra_social_id], references: [id])
  Ubicacion           Ubicacion   @relation(fields: [ubicacion_id], references: [id])
  Usuario             Usuario     @relation(fields: [usuario_id], references: [id])
}

model Secretaria {
  usuario_id      String    @id
  numero_telefono String
  ubicacion_id    String    @unique
  Ubicacion       Ubicacion @relation(fields: [ubicacion_id], references: [id])
  Usuario         Usuario   @relation(fields: [usuario_id], references: [id])
}

model Ubicacion {
  id            String      @id
  calle         String
  numero        String
  codigo_postal String
  ciudad        String
  provincia     String
  Medico        Medico?
  Paciente      Paciente?
  Secretaria    Secretaria?
}

model Usuario {
  id                 String            @id
  tipo_documento     TipoDocumentoEnum
  numero_documento   String            @unique
  nombre             String
  apellido           String
  correo_electronico String
  contrasena         String
  Admin              Admin?
  Medico             Medico?
  Paciente           Paciente?
  Secretaria         Secretaria?
}

enum TipoDocumentoEnum {
  CEDULA_IDENTIDAD
  DOCUMENTO_NACIONAL_IDENTIDAD
  LIBRETA_CIVICA
  LIBRETA_ENROLAMIENTO
  PASAPORTE
}

enum TipoMatriculaEnum {
  nacional
  provincial
}
